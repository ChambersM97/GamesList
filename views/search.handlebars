<h1>Search results</h1>

<div class="row">
  <div class="col-5">
    <ul id="game_list" class="list-group">
      {{#each apiData}}
        <li class="list-group-item">
          <a href="#" data-title="{{title}}" data-platform="{{platform}}">{{this.title}} ({{this.platform}})</a>
        </li>
      {{else}}
        <p>No results found!</p>
      {{/each}}
    </ul>
  </div>
  <div class="col-7" id="game_details">
    
  </div>
</div>


<script type="text/javascript">
$(document).ready(function() {
  // document.getElementById('game_list').getElementsByTagName('a')
  $('#game_list a').click(function(event) {
    event.preventDefault();
    $('#game_list li').removeClass('active');
    $(event.target).parent('li').addClass('active');
    let title = $(event.target).data('title');
    let platform = $(event.target).data('platform');
    $.get('/gameDetails', { title: title, platform: platform }).done(function(result) {
      $('#game_details').html(result);
    })
  })
});
</script>