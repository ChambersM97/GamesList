<h1>Search results</h1>

<div class="row">
  <div class="col-5">
    <ul id="game_list" class="list-group">
      {{#each apiData}}
        <li class="list-group-item">
          <a href="#">{{this.title}} ({{this.platform}})</a>
        </li>
      {{else}}
        <p>No results found!</p>
      {{/each}}
    </ul>
  </div>
  <div class="col-7">
    <div class="card">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">Game title</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="#" class="btn btn-primary">I have this Game</a>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
$(document).ready(function() {
  // document.getElementById('game_list').getElementsByTagName('a')
  $('#game_list a').click(function(event) {
    event.preventDefault();
    $('#game_list li').removeClass('active');
    $(event.target).parent('li').addClass('active');
    let game_title = $(event.target).text();
    $('.card-title').text(game_title);
  })
});
</script>